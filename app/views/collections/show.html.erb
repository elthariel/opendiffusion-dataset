<div class="mx-auto md:w-2/3 w-full flex">
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @collection %>

    <div class="w-full flex justify-between">
      <%= link_to "View Images", collection_images_path(@collection),
                  class: "rounded-lg py-3 px-5 bg-blue-100 inline-block font-medium" %>

      <%= link_to "Edit this collection", edit_collection_path(@collection),
                  class: "rounded-lg py-3 px-5 bg-green-100 inline-block font-medium" %>
      <%= link_to "Back to collections", collections_path,
                  class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
